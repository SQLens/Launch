{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ES2015",
    "useDefineForClassFields": true,
    "lib": [
      "ES2015",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    /* Bundler mode */
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,
    "incremental": true
  },
  "include": [
    "components/*.ts",
    "components/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
